<h1>Transactions</h1>

<%= link_to 'New Transaction', new_transaction_path %>

<%= form_tag transactions_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search transactions..." %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <% if @transactions.present? %>
        <% @transactions.first.keys.each do |header| %>
          <th><%= header.capitalize %></th>
        <% end %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <% transaction.each do |key, value| %>
          <td><%= value %></td>
        <% end %>
        <td>
          <%= link_to 'Show', transaction_path(transaction['Transaction']) %>
          <%= link_to 'Edit', edit_transaction_path(transaction['Transaction']) %>
          <%= link_to 'Delete', transaction_path(transaction['Transaction']), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
